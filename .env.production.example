# Production Environment Variables Example
# Copy this to .env.production and fill in your actual values

# Docker Registry (if using private registry)
DOCKER_REGISTRY_USERNAME=your-docker-username
DOCKER_REGISTRY_PASSWORD=your-docker-password

# Rails
RAILS_MASTER_KEY=your-rails-master-key-here
RAILS_ENV=production
RAILS_MAX_THREADS=5

# JWT
JWT_SECRET_KEY=your-production-jwt-secret-key-very-long-and-secure

# Database (PostgreSQL)
DB_HOST=localhost
DB_USERNAME=reportify_user
DB_PASSWORD=your-secure-database-password

# Redis
REDIS_URL=redis://localhost:6380/0

# Application URL
APP_HOST=reportify.rs-development.net
